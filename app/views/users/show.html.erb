<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @feed_items.any? %>
      <h3>All Microposts (<%= @micropost_all.count %>)</h3>
      <ol class="microposts">
        <%= render 'shared/feed' %>
      </ol>
    <% end %>
  </div>
</div>